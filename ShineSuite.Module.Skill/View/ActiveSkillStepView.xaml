<UserControl x:Class="ShineSuite.Module.Skill.View.ActiveSkillStepView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ShineSuite.Module.Skill.View"
             xmlns:viewmodels="clr-namespace:ShineSuite.Module.Skill.ViewModel"
             xmlns:converter="clr-namespace:ShineSuite.Common.Converter;assembly=ShineSuite.Common"
             xmlns:shinedata="clr-namespace:ShineData.Shine.Structure.Enum;assembly=ShineData"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
             xmlns:helper="clr-namespace:ShineSuite.Module.Skill.Helper"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="1230" d:DataContext="{d:DesignInstance viewmodels:ActiveSkillStepModel}">
    <UserControl.Resources>
        <converter:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
        
        <ObjectDataProvider x:Key="WeaponDemandType" MethodName="GetValues" ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="shinedata:WeaponDemandType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        
        <ikw:SimpleStackPanel Grid.Column="0" Orientation="Vertical" Margin="5" Spacing="5">
            <Grid>
                <ComboBox ui:ControlHelper.Header="Required Weapon" HorizontalAlignment="Stretch" ItemsSource="{Binding Source={StaticResource WeaponDemandType}}" SelectedItem="{Binding ActiveSkillEntry.WeaponDemandType, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=., Converter={StaticResource EnumDescriptionConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>
            <Grid helper:GridHelpers.Spacing="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0" ui:ControlHelper.Header="Mana Cost" Text="{Binding ActiveSkillEntry.Mana}"/>
                <TextBox Grid.Column="1" ui:ControlHelper.Header="Health Cost" Text="{Binding ActiveSkillEntry.Health}"/>
                <TextBox Grid.Column="2" ui:ControlHelper.Header="Light Point Cost" Text="{Binding ActiveSkillEntry.LightPoint}"/>
            </Grid>
            <Grid helper:GridHelpers.Spacing="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0" ui:ControlHelper.Header="Mana Rate Cost" Text="{Binding ActiveSkillEntry.ManaRate}"/>
                <TextBox Grid.Column="1" ui:ControlHelper.Header="Health Rate Cost" Text="{Binding ActiveSkillEntry.HealthRate}"/>
            </Grid>
            <Grid helper:GridHelpers.Spacing="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0" ui:ControlHelper.Header="Minimum Damage" Text="{Binding ActiveSkillEntry.MinimumDamage}"/>
                <TextBox Grid.Column="1" ui:ControlHelper.Header="Maximum Damage" Text="{Binding ActiveSkillEntry.MaximumDamage}"/>
            </Grid>
            <Grid helper:GridHelpers.Spacing="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0" ui:ControlHelper.Header="Minimum Magic Damage" Text="{Binding ActiveSkillEntry.MinimumMagicDamage}"/>
                <TextBox Grid.Column="1" ui:ControlHelper.Header="Maximum Magic Damage" Text="{Binding ActiveSkillEntry.MaximumMagicDamage}"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Label Grid.Column="0" Content="While Moving" Margin="0,4,0,0"/>
                <ui:ToggleSwitch Grid.Column="1" IsOn="{Binding ActiveSkillEntry.IsMovingSkill}" OnContent="Enabled" OffContent="Disabled"/>
                <!--<CheckBox Grid.Column="1" IsChecked="{Binding ActiveSkillEntry.IsMovingSkill}" MinWidth="75"/>-->
            </Grid>
        </ikw:SimpleStackPanel>
        
        
        
        

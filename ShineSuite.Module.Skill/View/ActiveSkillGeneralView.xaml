<UserControl x:Class="ShineSuite.Module.Skill.View.ActiveSkillGeneralView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ShineSuite.Module.Skill.View"
             xmlns:viewmodels="clr-namespace:ShineSuite.Module.Skill.ViewModel"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
             xmlns:helper="clr-namespace:ShineSuite.Module.Skill.Helper"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1230">
    
    <UserControl.DataContext>
        <viewmodels:ActiveSkillGeneralViewModel/>
    </UserControl.DataContext>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <ui:ScrollViewerEx Grid.Row="0" Grid.ColumnSpan="3" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
            <ui:CommandBar DefaultLabelPosition="Right">
                <ui:CommandBar.PrimaryCommands>
                    <ui:AppBarButton Label="Save Skills" Command="{Binding SaveSkillsCommand}">
                        <ui:AppBarButton.Icon>
                            <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Save}"/>
                        </ui:AppBarButton.Icon>
                    </ui:AppBarButton>
                </ui:CommandBar.PrimaryCommands>
            </ui:CommandBar>
        </ui:ScrollViewerEx>
        
        <GroupBox Grid.Row="1" Header="General Information">
            <ikw:SimpleStackPanel Orientation="Vertical" Margin="5" Spacing="5">
                <Grid helper:GridHelpers.Spacing="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                
                    <TextBox Grid.Column="0" ui:ControlHelper.Header="Index" Text="{Binding IndexName, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBox Grid.Column="1" ui:ControlHelper.Header="Name" Text="{Binding SkillName, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
                <Grid helper:GridHelpers.Spacing="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                
                    <TextBox Grid.Column="0" ui:ControlHelper.Header="Swing Time" Text="{Binding SwingTime}"/>
                    <TextBox Grid.Column="1" ui:ControlHelper.Header="Hit Time" Text="{Binding HitTime}"/>
                </Grid>
                <Grid helper:GridHelpers.Spacing="5">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                
                    <TextBox Grid.Row="0" Grid.RowSpan="6" 
                             ui:ControlHelper.Header="Description"
                             ui:ControlHelper.Description="Accepts a formatting pattern"
                             Text="{Binding RawDescription}" 
                             TextWrapping="Wrap" 
                             AcceptsReturn="True" 
                             Height="200"/>
                </Grid>
            </ikw:SimpleStackPanel>
        </GroupBox>
        
        <GroupBox Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="2" Header="Effects">
            <StackPanel Orientation="Vertical">
                <TabControl TabStripPlacement="Top" ui:TabControlHelper.IsAddTabButtonVisible="False" 
                            ItemsSource="{Binding ActiveSkillSteps}" 
                            SelectedItem="{Binding SelectedActiveSkillStep}">
                    <ui:TabControlHelper.TabStripHeader>
                        <Button
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            ui:FocusVisualHelper.FocusVisualMargin="0"
                            Visibility="Visible">
                            <ui:IconAndText Content="New Step" Icon="{x:Static ui:SegoeFluentIcons.Add}"/>
                        </Button>
                    </ui:TabControlHelper.TabStripHeader>
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ActiveSkillEntry.Step}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <local:ActiveSkillStepView DataContext="{Binding}" Margin="5"/>
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>

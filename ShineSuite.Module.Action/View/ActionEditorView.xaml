<UserControl x:Class="ShineSuite.Module.Action.View.ActionEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ShineSuite.Module.Action.View"
             xmlns:viewmodels="clr-namespace:ShineSuite.Module.Action.ViewModel"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="300" d:DataContext="{d:DesignInstance viewmodels:ActionEditorModel}">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        
        <ui:ScrollViewerEx Grid.Row="0" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
            <ui:CommandBar DefaultLabelPosition="Right">
                <ui:CommandBar.PrimaryCommands>
                    <ui:AppBarButton Label="Save Actions" Command="{Binding SaveActionsCommand}">
                        <ui:AppBarButton.Icon>
                            <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Save}"/>
                        </ui:AppBarButton.Icon>
                    </ui:AppBarButton>
                </ui:CommandBar.PrimaryCommands>
            </ui:CommandBar>
        </ui:ScrollViewerEx>
        
        <GroupBox Grid.Column="0" Grid.Row="1" Header="Basic Information">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <ikw:SimpleStackPanel Orientation="Vertical" Margin="5" Spacing="5">
                    <Grid>
                        <TextBox Grid.Column="0" ui:ControlHelper.Header="Name" Text="{Binding SelectedItemActionEffectDesc.Title, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                
                        <TextBox Grid.Row="0" Grid.RowSpan="4" ui:ControlHelper.Header="Description" Text="{Binding SelectedItemActionEffectDesc.Description}" Height="150" TextWrapping="Wrap"/>
                    </Grid>
                </ikw:SimpleStackPanel>
            </Grid>
        </GroupBox>
        
        <GroupBox Grid.Row="2" Header="Effects">
            <StackPanel Orientation="Vertical">
                <TabControl TabStripPlacement="Top" ui:TabControlHelper.IsAddTabButtonVisible="False" 
                            ItemsSource="{Binding ActionPairs}" 
                            SelectedItem="{Binding SelectedActionPair}">
                    <ui:TabControlHelper.TabStripHeader>
                        <Button
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            ui:FocusVisualHelper.FocusVisualMargin="0"
                            Visibility="Visible"
                            Command="{Binding CreateNewPairCommand}">
                            <ui:IconAndText Content="Add Pair" Icon="{x:Static ui:SegoeFluentIcons.Add}"/>
                        </Button>
                    </ui:TabControlHelper.TabStripHeader>
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Action}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <local:ActionPairView DataContext="{Binding}" Margin="5"/>
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>

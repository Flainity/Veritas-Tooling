<Window x:Class="ShineSuite.Module.Abstate.Window.NewAbstateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ShineSuite.Module.Abstate.Window"
        xmlns:modern="http://schemas.inkore.net/lib/ui/wpf/modern"
        mc:Ignorable="d"
        modern:WindowHelper.UseModernWindowStyle="True"
        modern:WindowHelper.SystemBackdropType="Mica"
        Title="New Abstate" Height="120" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBox modern:ControlHelper.PlaceholderText="New abstate index..." x:Name="AbstateNameTextBox" HorizontalAlignment="Stretch" Margin="5"/>
            <Button Content="Create" HorizontalAlignment="Stretch" Margin="5" Click="ButtonBase_OnClick"/>
        </StackPanel>
    </Grid>
</Window>

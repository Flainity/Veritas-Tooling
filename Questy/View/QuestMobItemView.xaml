<UserControl x:Class="Questy.View.QuestMobItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodel="clr-namespace:Questy.ViewModel"
             xmlns:converter="clr-namespace:Questy.Converter"
             xmlns:shinedata="clr-namespace:ShineData.Shine.Structure.Quest;assembly=ShineData"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <viewmodel:QuestGeneralViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <converter:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />

        <ObjectDataProvider x:Key="MobActionEnum" MethodName="GetValues" ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="shinedata:QuestNPCMobAction" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="MobGroupEnum" MethodName="GetValues" ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="shinedata:MobGroup" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ResourceDictionary x:Key="Components">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/BaseComponents.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <GroupBox Header="Monsters">
            <DataGrid ItemsSource="{Binding SelectedQuest.EndCondition.NPCMobs}"
                      Resources="{StaticResource Components}" AutoGenerateColumns="False" Margin="5">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding IsRequired}" Width="100"></DataGridCheckBoxColumn>
                    <DataGridTextColumn Header="Monster ID" Binding="{Binding ID}" Width="100" />
                    <DataGridComboBoxColumn Header="IF Type" SelectedItemBinding="{Binding Action}" Width="100"
                                            ItemsSource="{Binding Source={StaticResource MobActionEnum}}">
                        <DataGridComboBoxColumn.ElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="ItemTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <TextBlock
                                                Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGridComboBoxColumn.ElementStyle>
                        <DataGridComboBoxColumn.EditingElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="ItemTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <TextBlock
                                                Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGridComboBoxColumn.EditingElementStyle>
                    </DataGridComboBoxColumn>

                    <DataGridTextColumn Header="Amount" Binding="{Binding Count}" Width="100" />

                    <DataGridComboBoxColumn Header="Target Group" SelectedItemBinding="{Binding TargetGroup}"
                                            Width="100"
                                            ItemsSource="{Binding Source={StaticResource MobGroupEnum}}">
                        <DataGridComboBoxColumn.ElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="ItemTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <TextBlock
                                                Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGridComboBoxColumn.ElementStyle>
                        <DataGridComboBoxColumn.EditingElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="ItemTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <TextBlock
                                                Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGridComboBoxColumn.EditingElementStyle>
                    </DataGridComboBoxColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <GroupBox Grid.Row="1" Header="Items">
            <DataGrid ItemsSource="{Binding SelectedQuest.EndCondition.Items}"
                      Resources="{StaticResource Components}" AutoGenerateColumns="False" Margin="5">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding IsRequired}" Width="100"></DataGridCheckBoxColumn>
                    <DataGridTextColumn Header="Item ID" Binding="{Binding ID}" Width="100" />
                    <DataGridTextColumn Header="Amount" Binding="{Binding Lot}" Width="100" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</UserControl>
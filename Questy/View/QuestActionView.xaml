        <DataGrid ItemsSource="{Binding SelectedQuest.Actions}" Resources="{StaticResource Components}" AutoGenerateColumns="False" Margin="5">
            <DataGrid.Columns>
                <DataGridComboBoxColumn Header="IF Type" SelectedItemBinding="{Binding IfType}" Width="100"
                                        ItemsSource="{Binding Source={StaticResource QuestActionIfType}}">
                    <DataGridComboBoxColumn.ElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGridComboBoxColumn.ElementStyle>
                    <DataGridComboBoxColumn.EditingElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGridComboBoxColumn.EditingElementStyle>
                </DataGridComboBoxColumn>

                <DataGridTextColumn Header="IF Target" Binding="{Binding IfTarget}" Width="100" />

                <DataGridComboBoxColumn Header="Then Type" SelectedItemBinding="{Binding ThenType}" Width="100"
                                        ItemsSource="{Binding Source={StaticResource QuestActionThenType}}">
                    <DataGridComboBoxColumn.ElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGridComboBoxColumn.ElementStyle>
                    <DataGridComboBoxColumn.EditingElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGridComboBoxColumn.EditingElementStyle>
                </DataGridComboBoxColumn>

                <DataGridTextColumn Header="Then Target" Binding="{Binding ThenTarget}" Width="100" />
                <DataGridTextColumn Header="Then Percent" Binding="{Binding ThenPercent}" Width="100" />
                <DataGridTextColumn Header="Then Minimum" Binding="{Binding ThenMinCount}" Width="100" />
                <DataGridTextColumn Header="Then Maximum" Binding="{Binding ThenMaxCount}" Width="100" />

                <DataGridComboBoxColumn Header="Target Group" SelectedItemBinding="{Binding TargetGroup}" Width="100"
                                        ItemsSource="{Binding Source={StaticResource MobGroupEnum}}">
                    <DataGridComboBoxColumn.ElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemTemplate">
                                <Setter.Value>

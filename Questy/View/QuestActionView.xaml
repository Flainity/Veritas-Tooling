             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Questy.View"
             xmlns:viewmodel="clr-namespace:Questy.ViewModel"
             xmlns:converter="clr-namespace:Questy.Converter"
             xmlns:shinedata="clr-namespace:ShineData.Shine.Structure.Quest;assembly=ShineData"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <viewmodel:QuestGeneralViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <converter:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />

        <ObjectDataProvider x:Key="QuestActionIfType" MethodName="GetValues" ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="shinedata:QuestActionIfType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="QuestActionThenType" MethodName="GetValues" ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="shinedata:QuestActionThenType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="MobGroupEnum" MethodName="GetValues" ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="shinedata:MobGroup" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ResourceDictionary x:Key="Components">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/BaseComponents.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


<UserControl x:Class="Questy.View.Dialog.DialogListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viemodel="clr-namespace:Questy.ViewModel.Dialog"
             xmlns:converter="clr-namespace:Questy.Converter"
             xmlns:shinedata="clr-namespace:ShineData.Shine.Structure.Dialog;assembly=ShineData"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <viemodel:DialogListViewModel/>
    </UserControl.DataContext>
    
    <UserControl.Resources>
        <converter:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
        
        <ObjectDataProvider x:Key="QuestDialogType" MethodName="GetValues" ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="shinedata:QuestDialogType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Button Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Content="Reset Filters" Command="{Binding ResetFilterCommand}"/>
        
        <Label Grid.Row="1" Grid.Column="0" Content="Dialog Type Filter" Margin="0,4,5,5"/>
        <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Source={StaticResource QuestDialogType}}"
                  SelectedItem="{Binding DialogTypeFilter}" Margin="5">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock
                        Text="{Binding Path=., Converter={StaticResource EnumDescriptionConverter}}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        
        <Label Grid.Row="2" Grid.Column="0" Content="Quest Filter" Margin="0,4,5,5"/>
        <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding QuestList}" SelectedItem="{Binding SelectedQuestFilter}" Margin="5"/>
        
        <Separator Background="LightGray" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"/>
        
        <ListBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,5,0,0" ItemsSource="{Binding Dialogs}" SelectedValuePath="Value" SelectedValue="{Binding SelectedDialog}" BorderThickness="0" SelectionMode="Single" Background="Transparent">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Label Content="{Binding Value}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Padding="2,0,0,0" FontSize="12" FontFamily="Biome" FontWeight="Normal"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>

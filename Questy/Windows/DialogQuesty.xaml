<Window x:Class="Questy.Windows.DialogQuesty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Questy.Windows"
        xmlns:views="clr-namespace:Questy.View.Dialog"
        xmlns:viewmodel="clr-namespace:Questy.ViewModel.Dialog"
        mc:Ignorable="d"
        Title="Questy Dialog :: Dialog editing made easy" Height="650" Width="1200">
    <Window.DataContext>
        <viewmodel:DialogQuestyViewModel/>
    </Window.DataContext>
    
    <Window.InputBindings>
        <KeyBinding Key="N" Modifiers="Control" Command="{Binding NewDialogCommand}"/>
        <KeyBinding Key="S" Modifiers="Control" Command="{Binding SaveDialogsCommand}"/>
    </Window.InputBindings>
    
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" Padding="4">
                <MenuItem Header="File">
                    <MenuItem Header="New Dialog" Command="New" IsEnabled="True" InputGestureText="Ctrl+N"/>
                    <MenuItem Header="Save Dialogs" Command="Save" IsEnabled="True" InputGestureText="Ctrl+S"/>
                </MenuItem>
            </Menu>
            <StatusBar DockPanel.Dock="Bottom" Background="RoyalBlue" Foreground="White">
                <StatusBarItem Content="{Binding InformationText}"/>
            </StatusBar>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <views:DialogListView Grid.Column="0"/>
                <views:DialogEditorView Grid.Column="1" Margin="10,0,10,0"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
